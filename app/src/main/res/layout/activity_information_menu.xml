<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/trail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/trailIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        android:background="@android:color/transparent"
                        app:srcCompat="@mipmap/traileticon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/trailEt"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="Trail Etiquette"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:textAlignment="center" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/trailBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="etButtonClicked"
                        android:text="View" />

                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/bDrivingRow"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/bDrivingIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/basicicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bDriving"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Basic Driving"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bDrivingBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="bdButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/aDrivingRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/aDrivingIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/adicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/aDriving"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Advanced Driving"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/aDrivingBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="adButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/muddin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/mudIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/mudicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mud"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Muddin'"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/muddinBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="mButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/crawling"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/rockIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/rockicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/rock"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Rock Crawling"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/rockBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="rcButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/winter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/snowIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/snowicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
