                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/winchBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="wButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/uStuck"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/uStuckIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/stuckicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Are You Stuck?"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/uStuckBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="usButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/listIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/packicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/packingList"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="What to Pack for a Day on the Trails"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/listBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="wtpButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/parts"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/partsIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/toolsicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/toolsParts"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Recommended Tools and Parts to Bring"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/partsBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="tButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/basic"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/basicIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/fixicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/BasicM"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Basic Maintenince and Repairs"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/basicBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="bmrButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tricks"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tricksIMG"
                        android:layout_width="125dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"
                        app:srcCompat="@mipmap/tipsicon" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tts"
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:gravity="center"
                        android:text="Tips and Tricks"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/tricksBut"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:onClick="tntcButtonClicked"
                        android:text="View" />
                </FrameLayout>

            </TableRow>

        </TableLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>